# ============================================
# Real-Time Voice Translation — Environment
# ============================================
# Copy this file to .env and fill in your keys

# --- App ---
APP_NAME=VoiceTranslate
DEBUG=true
SECRET_KEY=change-me-to-a-random-string
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# --- Database ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/voicetranslate
REDIS_URL=redis://localhost:6379/0

# --- Voice & Speech ---
# Deepgram — Speech-to-Text  (https://console.deepgram.com)
DEEPGRAM_API_KEY=your_deepgram_api_key

# ElevenLabs — Text-to-Speech + Voice Cloning  (https://elevenlabs.io)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# --- Translation / LLM ---
# OpenAI — Primary translation engine  (https://platform.openai.com)
OPENAI_API_KEY=your_openai_api_key

# Anthropic — Fallback translation  (https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key

# --- LiveKit (WebRTC — Audio/Video Calls) ---
# Self-hosted: wss://your-domain:7880  |  Cloud: wss://your-app.livekit.cloud
# Get keys from https://livekit.io or use dev defaults for local
LIVEKIT_URL=wss://localhost:7880
LIVEKIT_PUBLIC_URL=wss://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret

# --- AWS S3 (Voice Storage) ---
# Used for storing cloned voice profiles
# https://aws.amazon.com/s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=voicetranslate-voices
AWS_REGION=us-east-1

# --- Monitoring ---
# Sentry — Error tracking  (https://sentry.io)
SENTRY_DSN=
